        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Profilim"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profilButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profilButton"
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#45c08a"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:theme="@style/Base.V23.Theme.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playerButton"
        android:layout_width="300dp"
        android:layout_height="103dp"

        android:layout_marginBottom="28dp"

        android:background="@drawable/rounded_button"
        android:backgroundTint="#4d76ff"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/White"
