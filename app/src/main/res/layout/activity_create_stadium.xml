<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateStadium">

    <Button
        android:id="@+id/nexthalisahacreate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/next_button"
        android:backgroundTint="@color/LightGrey"
        android:text="halısaha için şehir seç"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/White"
        android:textSize="20sp"

        android:theme="@style/Base.V23.Theme.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/createhalisahaaddress"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="adres"
        android:inputType="text"
        android:paddingLeft="35dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/createhalisahaphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/createhalisahaname"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="halısaha adı"
        android:inputType="text"
        android:paddingLeft="35dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/createhalisahaaddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/createhalisahainterval"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="maç süresi aralığı  (dakika)"
        android:inputType="number"
        android:textColor="@android:color/darker_gray"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/createhalisahamoney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/createhalisahamoney"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginBottom="72dp"
        android:drawableLeft="@drawable/button_money"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="maç fiyatı"
        android:inputType="number"
        android:textColor="@android:color/darker_gray"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/nexthalisahacreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/createhalisahaphone"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/button_phone"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="telefon numarası"
        android:inputType="number"
        android:textColor="@android:color/darker_gray"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/createhalisahainterval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createhalisahaheader"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-light"
        android:text="Halı Saha Oluştur"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/createhalisahaname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />
</android.support.constraint.ConstraintLayout>